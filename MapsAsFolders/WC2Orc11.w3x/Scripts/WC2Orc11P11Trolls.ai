//===========================================================================
// Returns true if the minimum forces for an attack exist
//===========================================================================
function HaveMinimumAttackers takes nothing returns boolean
    local integer count

    // Check for attack wave limit
    if (attackWave > 7) then
        return false
    endif

    // Attack Group: Melee
    set count = GetUnitCountDone( 'nftr' )
    if (count < 2) then
        return false
    endif
    set count = GetUnitCountDone( 'n006' )
    if (count < 2) then
        return false
    endif
    return true
endfunction

//===========================================================================
// Assigns units to attack based on the given attack group
//===========================================================================
function PrepareAttackGroup takes integer groupID returns nothing
    local integer all

    // Attack Group #1: All Units
    if (groupID == 1) then
        call AddAttackUnit( 1,   1,   'O60B' )
        call AddAttackUnit( 2,   2,   'otbr' )
        call AddAttackUnit( 2,   2,   'n006' )
        call AddAttackUnit( 2,   2,   'nftr' )
        call AddAttackUnit( 2,   2,   'ocat' )
        call AddAttackUnit( 1,   1,   'nftk' )
        call AddAttackUnit( 2,   2,   'nfsp' )
        call AddAttackUnit( 2,   2,   'nfsh' )
        call AddAttackUnit( 2,   2,   'nftb' )
        call AddAttackUnit( 2,   2,   'nftt' )

        // Attack Group #2: ArtileryMelee
    elseif (groupID == 2) then
        call AddAttackUnit( 2,   2,   'nftb' )
        call AddAttackUnit( 2,   2,   'n006' )
        call AddAttackUnit( 1,   1,   'nftk' )
        call AddAttackUnit( 2,   2,   'nftt' )
        call AddAttackUnit( 1,   1,   'ocat' )
        call AddAttackUnit( 2,   2,   'nftr' )

        // Attack Group #3: ArtileryMeleeCasters
    elseif (groupID == 3) then
        call AddAttackUnit( 2,   2,   'nftb' )
        call AddAttackUnit( 2,   2,   'n006' )
        call AddAttackUnit( 1,   1,   'nftk' )
        call AddAttackUnit( 2,   2,   'nftt' )
        call AddAttackUnit( 1,   1,   'ocat' )
        call AddAttackUnit( 2,   2,   'nftr' )
        call AddAttackUnit( 1,   1,   'nfsh' )
        call AddAttackUnit( 1,   1,   'nfsp' )

        // Attack Group #4: Bats
    elseif (groupID == 4) then
        call AddAttackUnit( 2,   2,   'otbr' )

        // Attack Group #5: HeavyMelee
    elseif (groupID == 5) then
        call AddAttackUnit( 2,   2,   'nftb' )
        call AddAttackUnit( 2,   2,   'n006' )
        call AddAttackUnit( 1,   1,   'nftk' )
        call AddAttackUnit( 2,   2,   'nftt' )
        call AddAttackUnit( 1,   1,   'O60B' )

        // Attack Group #6: Melee
    elseif (groupID == 6) then
        call AddAttackUnit( 2,   2,   'nftr' )
        call AddAttackUnit( 2,   2,   'n006' )

    endif
endfunction

